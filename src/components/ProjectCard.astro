---
interface Props {
  name: string;
  description: string;
  url: string;
  icon: string;
  tags?: string[];
  iconBorder?: boolean;
}

const {
  name,
  description,
  url,
  icon,
  tags = [],
  iconBorder = false,
} = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="project-card glass"
>
  <div class="project-icon">
    {iconBorder ? (
      <div class="icon-border-wrapper">
        <img src={icon} alt={`${name} icon`} width="64" height="64" />
      </div>
    ) : (
      <img src={icon} alt={`${name} icon`} width="64" height="64" />
    )}
  </div>
  <div class="project-content">
    <h3 class="project-name">{name}</h3>
    <p class="project-description">{description}</p>
    {
      tags.length > 0 && (
        <div class="project-tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )
    }
  </div>
  <svg
    class="arrow-icon"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <line x1="7" y1="17" x2="17" y2="7"></line>
    <polyline points="7 7 17 7 17 17"></polyline>
  </svg>
</a>

<style>
  .project-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    text-decoration: none;
    color: inherit;
  }

  .project-icon {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
  }

  .project-icon img {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .icon-border-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 11px;
    box-sizing: border-box;
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    box-shadow:
      0 1px 2px rgba(0, 0, 0, 0.1),
      0 4px 8px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.8),
      inset 0 -1px 0 rgba(0, 0, 0, 0.05);
  }

  .icon-border-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 11px;
    padding: 1px;
    background: linear-gradient(145deg, rgba(255,255,255,0.8), rgba(0,0,0,0.1));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .icon-border-wrapper img {
    width: 28px;
    height: 28px;
    position: relative;
    z-index: 1;
  }

  :global([data-theme="dark"]) .icon-border-wrapper {
    background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
    box-shadow:
      0 1px 2px rgba(0, 0, 0, 0.3),
      0 4px 8px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.1),
      inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }

  :global([data-theme="dark"]) .icon-border-wrapper::before {
    background: linear-gradient(145deg, rgba(255,255,255,0.15), rgba(0,0,0,0.3));
  }

  :global([data-theme="dark"]) .icon-border-wrapper img {
    filter: brightness(0) invert(1);
  }

  .project-content {
    flex: 1;
    min-width: 0;
  }

  .project-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 4px;
    color: var(--color-text);
  }

  .project-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .project-tags {
    display: flex;
    gap: 8px;
    margin-top: 12px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 4px 10px;
    background: var(--color-border);
    border-radius: 6px;
    color: var(--color-text-secondary);
  }

  .arrow-icon {
    flex-shrink: 0;
    color: var(--color-text-secondary);
    transition: transform var(--transition);
  }

  .project-card:hover .arrow-icon {
    transform: translate(2px, -2px);
  }

  @media (max-width: 480px) {
    .project-card {
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
    }

    .arrow-icon {
      position: absolute;
      top: 24px;
      right: 24px;
    }

    .project-card {
      position: relative;
    }
  }
</style>
