---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    name: "SpotMenu",
    description:
      "Spotify and Apple Music in your macOS menu bar. Native SwiftUI with live album art and global keyboard shortcuts.",
    url: "https://kmikiy.github.io/SpotMenu/",
    icon: "/images/spotmenu-icon.png",
    tags: ["macOS", "SwiftUI", "Open Source"],
  },
  {
    name: "Time",
    description:
      "Track time zones, join meetings, and never miss a beat. Native macOS menu bar app for managing time zones and calendar events.",
    url: "https://menubartime.com",
    icon: "/images/time-icon.png",
    tags: ["macOS", "SwiftUI", "Productivity"],
  },
  {
    name: "Wallz",
    description:
      "Photorealistic 3D virtual tours from blueprints. Help real estate developers showcase properties before construction.",
    url: "https://wallz.io",
    icon: "/images/wallz-icon.svg",
    tags: ["3D", "Real Estate", "SaaS"],
    iconBorder: true,
  },
];
---

<Layout title="Miklós Kristyán - Software Developer">
  <header class="header">
    <div class="container header-content">
      <div class="logo">MK</div>
      <ThemeToggle />
    </div>
  </header>

  <main class="main">
    <section class="hero container">
      <div class="hero-content glass">
        <h1 class="name">Miklós Kristyán</h1>
        <p class="role">Senior Backend Engineer</p>
        <p class="tagline">Helping startups go from zero to production</p>
        <p class="credential">MSc Computer Engineering</p>
        <div class="social-links">
          <a
            href="https://linkedin.com/in/mikl%C3%B3s-kristy%C3%A1n-77a8a943"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
            LinkedIn
          </a>
          <a
            href="https://github.com/kmikiy"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            GitHub
          </a>
          <a href="mailto:mikloskristyan@gmail.com" class="social-link">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            Email
          </a>
        </div>
      </div>
    </section>

    <section class="projects container">
      <h2 class="section-title">Projects</h2>
      <div class="projects-grid">
        {projects.map((project) => <ProjectCard {...project} />)}
      </div>
    </section>
  </main>

  <footer class="footer">
    <div class="container footer-content">
      <p>&copy; {new Date().getFullYear()} Miklós Kristyán</p>
    </div>
  </footer>
</Layout>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 16px 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 10px 16px;
  }

  .main {
    padding-top: 120px;
    padding-bottom: 80px;
  }

  .hero {
    margin-bottom: 80px;
  }

  .hero-content {
    padding: 48px;
    text-align: center;
  }

  .name {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 4px;
  }

  .role {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tagline {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 12px;
  }

  .credential {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    opacity: 0.6;
    margin-bottom: 32px;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text);
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all var(--transition);
  }

  .social-link:hover {
    background: var(--color-border);
    opacity: 1;
    transform: translateY(-2px);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 24px;
    color: var(--color-text);
  }

  .projects-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer {
    padding: 24px 0;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  @media (max-width: 640px) {
    .name {
      font-size: 2rem;
    }

    .hero-content {
      padding: 32px 24px;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }

    .social-link {
      width: 100%;
      justify-content: center;
    }
  }
</style>
